<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Split Picking Wizard -->

        <record id="view_split_picking_wizard" model="ir.ui.view">
            <field name="name">Split Picking</field>
            <field name="model">split.picking</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Split Picking">  
                    <separator string="Select the number of new picking"/>
                    <newline/>              
                    <field name="number" required="1"/>
                    <field name="period" required="1"/>
                    <newline/>              
                    <separator string="Split Picking :"/>
                    <button name="split_picking" string="Split" type="object" class="oe_link"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </form>
            </field>
        </record>
    
    </data>
</openerp>
