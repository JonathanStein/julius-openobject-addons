<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="mrp_production_scrap_reason_form_view_inherit" model="ir.ui.view">
            <field name="name">mrp.production.scrap_reason</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_raw_ids']/tree/field[@name='quantity_done']" position="after">
                    <field name="reason"/>
                    <field name="notes_reason"/>
                </xpath>
                <xpath expr="//field[@name='move_finished_ids']/tree/field[@name='quantity_done']" position="after">
                    <field name="reason"/>
                    <field name="notes_reason"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
