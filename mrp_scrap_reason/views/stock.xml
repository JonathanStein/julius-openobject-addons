<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_move_form_scrap_reason" model="ir.ui.view">
            <field name="name">stock.move.view.form.inherit</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form"/>
            <field name="arch" type="xml">
                <group name="quants_grp" position="before">
                    <group string="Scrap Reason" attrs="{'invisible': [('scrapped', '=', False)]}">
                        <field name="scrapped" invisible="1"/>
                        <field name="reason"/>
                        <field name="notes_reason"
                            attrs="{'required': [('reason', '=', '-1')], 'invisible': [('reason', '!=', '-1')]}"
                            placeholder="Describe here the reason for scraping these products..."/>
                    </group>
                </group>
            </field>
        </record>

    </data>
</openerp>
