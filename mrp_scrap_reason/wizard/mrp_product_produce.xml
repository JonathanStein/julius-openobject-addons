<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

       <record id="mrp_product_produce_with_scrap_form_view" model="ir.ui.view">
            <field name="name">mrp.product.produce.with.scrap</field>
            <field name="model">mrp.product.produce</field>
            <field name="inherit_id" ref="mrp.view_mrp_product_produce_wizard"/>
            <field name="arch" type="xml">
                <field name="consume_line_ids" position="after">
                    <field name="scrap_ids" nolabel="1" colspan="4">
                        <tree editable="top" delete="0" create="0">
                            <field name="product_id" readonly="1"/>
                            <field name="product_qty"/>
                            <field name="reason" attrs="{'required': [('product_qty', '!=', 0)]}"/>
                            <field name="notes_reason"
                                   attrs="{'required': [('reason', '=', '-1')]}"
                                   placeholder="Describe here the reason for scraping these products..."/>
                        </tree>
                    </field>
                </field>
            </field>
        </record>

    </data>
</openerp>
