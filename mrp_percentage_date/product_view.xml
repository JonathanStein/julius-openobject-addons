<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

        <record id="product_sacatec_form_inherit" model="ir.ui.view">
            <field name="name">product.sacatec.view.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='delay']" position="inside">
                    <label for="date_percentage" attrs="{'invisible':[('type','=','service')]}"/>
                    <div attrs="{'invisible':[('type','=','service')]}">
                        <field name="date_percentage" class="oe_inline"/> / 100
                    </div>
                </xpath>
			</field>
        </record>

        <record id="company_sacatec_form_inherit" model="ir.ui.view">
            <field name="name">company.sacatec.view.form</field>
            <field name="model">res.company</field>
            <field name="priority">25</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='logistics_grp']" position="inside">
                    <label for="date_percentage"/>
                    <div>
                        <field name="date_percentage" class="oe_inline"/> / 100
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
