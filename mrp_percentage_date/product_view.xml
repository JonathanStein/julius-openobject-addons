<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
        <record id="product_sacatec_form_inherit" model="ir.ui.view">
            <field name="name">product.sacatec.view.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
            	<field name="standard_price" position="after">
					<field name="date_percentage"/>
                </field>
			</field>
        </record>
        <record id="company_sacatec_form_inherit" model="ir.ui.view">
            <field name="name">company.sacatec.view.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="sale_stock.mrp_company"/>
            <field name="arch" type="xml">
            	<field name="security_lead" position="after">
					<field name="date_percentage"/>
                </field>
			</field>
        </record>
    </data>
</openerp>
