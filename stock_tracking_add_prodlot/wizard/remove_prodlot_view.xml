<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		 <record id="view_stock_packaging_delete_wizard" model="ir.ui.view">
			<field name="name">Stock packaging delete</field>
			<field name="model">stock.packaging.delete</field>
			<field name="type">form</field>
			<field name="inherit_id" ref="stock_tracking_add_product.view_stock_packaging_delete_wizard"/>
			<field name="arch" type="xml">
				<field name="product_ids" position="after">
					<field name="prodlot_ids" nolabel="1" colspan="2" attrs="{'invisible': [('type','!=','prodlot')]}">
						<tree string="Remove production lots" editable="top">
							<field name="product_id" required="True"/>
							<field name="prodlot_id" required="True"/>
							<field name="quantity" readonly="True"/>
							<field name="delete"/>
						</tree>
					</field>
				</field>
			</field>
		</record>
	    
    </data>
</openerp>
