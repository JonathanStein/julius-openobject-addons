<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record id="product_ecotaxe_form_inherit" model="ir.ui.view">
            <field name="name">product.ecotaxe.view.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <div name="options" position="inside">
                    <field name="ecotaxe"/>
                    <label for="ecotaxe"/>
                </div>
                <page string="Information" position="inside">
                    <div name="ecotaxe_info">
                        <label for="ecotaxe_type"/>
                        <field name="ecotaxe_type" class="oe_inline"/>
                        <field name="ecotaxe_product_id"
                            attrs="{'required': [('ecotaxe_type', 'in', ('1','2'))], 'invisible': [('ecotaxe_type', '=', '0')]}"
                            class="oe_inline"/>
                    </div>
                </page>
            </field>
        </record>

    </data>
</openerp>
