<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
		<record id="email_confirmation_form" model="ir.ui.view">
            <field name="name">email.confirmation.form</field>
            <field name="model">mail.confirm</field>
            <field name="arch" type="xml">
                <form string="Email Confirmation" version="7.0">
                <header>
                	<label string="Do you really want to sent this mail?"/>
                </header>
                <sheet>
                	<group>
                		<label string="Send email to:"/>
                		<field name="email_to" nolabel="1" readonly="1"/>
                	</group>
                </sheet>
                <footer>
                	<button string="Yes" name="create" type="object"  class="oe_highlight" />
                	or
   	                <button string="No" special="cancel"  class="oe_link" />
                </footer>
                </form>
            </field>
        </record>
   		<record id="email_confirmation_tree" model="ir.ui.view">
            <field name="name">email.confirmation.tree</field>
            <field name="model">mail.confirm</field>
            <field name="arch" type="xml">
                <tree string="Email Confirmation" version="7.0">
                </tree>
            </field>
        </record>
        
       	
        <record id="action_mail_confirm_form" model="ir.actions.act_window">
            <field name="name">Mail confirm</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mail.confirm</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="multi" eval="0"/>
        </record>
        
	</data>
</openerp>
        